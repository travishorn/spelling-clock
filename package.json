{
	"name": "spelling-clock",
	"version": "1.0.0",
	"description": "A creative digital time display using analog clocks as pixels. Each digit is formed by a grid of small analog clocks where the hands rotate to create visual numbers.",
	"type": "module",
	"private": true,
	"keywords": [
		"clock",
		"time",
		"analog",
		"digital",
		"art",
		"svelte",
		"sveltekit",
		"typescript",
		"tailwindcss",
		"creative",
		"visual",
		"animation"
	],
	"author": "Travis Horn <travis@travishorn.com> (https://travishorn.com/)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/travishorn/spelling-clock.git"
	},
	"homepage": "https://github.com/travishorn/spelling-clock#readme",
	"bugs": {
		"url": "https://github.com/travishorn/spelling-clock/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	}
}
